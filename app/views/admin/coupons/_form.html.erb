<div class="my-5">
  <%= form.label "優惠券名稱" %>
  <%= form.text_field :name, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
</div>
<div class="my-5">
  <%= form.label "折扣金額" %>
  <%= form.text_field :discount_amount, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
</div>
<div class="my-5">
  <%= form.label "最後使用日" %>
  <%= form.date_field :expiration_date, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
</div>
<div class="my-5">
  <%= form.label "可使用次數" %>
  <%= form.number_field :max_usage_count, in: 1.0..5.0, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
</div>
<div><%= form.hidden_field :user_id, value: current_user.id %></div>
<div class="inline">
  <% if @coupon.new_record? %>
    <%= form.submit "建立優惠券", class: "add-btn" %>
  <% else %>
    <%= form.submit "更新", class: "add-btn" %>
  <% end %>
</div>
