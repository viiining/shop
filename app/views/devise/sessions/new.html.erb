<section class= "container flex justify-center">
  <div class="block px-3 py-2 mt-2 border border-gray-200 rounded-md shadow outline-none lg:w-1/3">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="flex mt-2">
        <%= f.email_field :email, autofocus: true, class:"input w-full", autocomplete: "email", placeholder:"信箱"%>
      </div>
      <div class="flex mt-2">
        <%= f.password_field :password, autocomplete: "current-password",class: "input w-full", placeholder:"密碼" %>
      </div>
      <% if devise_mapping.rememberable? %>
        <div class="mt-2">
          <div class="flex justify-between">
            <div class="items-center align-middle">
              <%= f.check_box :remember_me%>
              <%= f.label :remember_me , '記住我', class:'text-md align-middle' %>
            </div>
            <%= link_to "忘記密碼？", new_password_path(resource_name), class:'text-md align-middle' %>
          </div>
        </div>
      <% end %>
      <div class="mt-2">
        <%= f.submit "登入",data:{turbo: false}, class:'text-xl save-btn my-1 w-full' %> <br />
      </div>
    <% end %>
    <div class="flex items-center justify-center my-3">
      <p>還沒有帳號嗎?</p>
      <%= link_to "註冊", new_user_registration_path, class:"flex items-center font-semibold text-blue-600 mx-3 h-10"%>
    </div>
  </div>
</section>