<div class="container mx-auto">
  <div class="mb-10 w-fit">
    <% if notice.present? %>
    <div class="px-4 py-3 text-green-700 bg-green-100 border border-green-400 rounded" role="alert">
      <span class="block sm:inline"><%= notice %></span>
    </div>
    <% end %>
  </div>
  
  <div class="flex flex-col items-center mb-4 md:flex-row">
    <%= link_to "新增書籍", new_book_path, class: "add-btn mb-2 md:mb-0" %>
    <%= link_to "購物車", cart_path, class: "save-btn ml-2" %>
  </div>

  <div class="overflow-x-auto">
    <table class="min-w-full table-auto">
      <thead class="text-lg font-semibold">
        <tr>
          <th class="py-5 pr-5 text-left">書籍名稱</th>
          <th class="py-5"></th>
          <th class="py-5 pr-5 text-left">書籍售價</th>
          <th class="py-5"></th>
        </tr>
      </thead>
      <tbody>
        <% @books.each do |book| %>
          <tr>
            <td><%= book.title %></td>
            <td class="pr-5 md:pr-10">
              <%= link_to "選購", add_cart_path(book), data: { turbo_method: :post }, class: "add-btn font-semibold" %>
            </td>
            <td>NT $<%= book.price %></td>
            <td class="flex items-center justify-center pt-1">
              <%= link_to '編輯', edit_book_path(book), class: "save-btn text-xs mr-2" %>
              <%= button_to "刪除", book, method: :delete, data: { confirm: "確定刪除?" }, class: "danger-btn text-xs" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
