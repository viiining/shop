<section class="flex items-center justify-between p-5 bg-blue-200">
<h1 class="text-3xl font-bold">Online Bookstore</h1>
  <div class="flex justify-end"> 
    <% if current_user %>
    <div class="flex items-center">
      <p class="mr-2"><%= current_user.email %></p><%= link_to '登出', destroy_user_session_path, data: { turbo_method: :delete }, class: "save-btn" %>
    </div>
    <% else %>
    <div>
      <%= link_to "註冊", new_user_registration_path, class: "save-btn" %>
      <%= link_to "登入", new_user_session_path, class: "save-btn" %>
    </div>
    <% end %>
  </div>
</section>